<header class="header">
  <div class="header__bar">
        <h1 class="header__bar__title-logo">shopping memo</h1>
    <% if user_signed_in? %>
        <p class="header__bar__daiso-item"><span class="spr_col">この文字色</span>: "daiso" 商品</p>
        <div class="header__bar__acount">
          <p class="header__bar__acount__logout">
            <%= link_to "ログアウト", "users/sign_out", data: { confirm: "ログアウトで宜しいですか？" } %>
          </p>
          <p class="header__bar__acount__user-delete">
            <%= link_to "アカウント削除", user_path(current_user.id), method: :delete, data: { confirm: "アカウントを削除しますか？" } %>
          </p>
        </div>
    <% end %>
    <hr class="header__bar__hr">
  </div>
</header>