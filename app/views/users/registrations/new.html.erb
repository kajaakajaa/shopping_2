<div class="style_devise">
  <div class="style_devise__wrapper">

    <h2 class="links_component">新規登録</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field links_component">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field links_component">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(最低 <%= @minimum_password_length %> 文字)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field links_component">
        <%= f.label :password_confirmation, "Password 再確認"%><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions links_component">
        <%= f.submit "送信" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>